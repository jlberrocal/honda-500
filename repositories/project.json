{
  "name": "repositories",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "repositories/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/repositories",
        "tsConfig": "repositories/tsconfig.lib.json",
        "packageJson": "repositories/package.json",
        "main": "repositories/src/index.ts",
        "assets": ["repositories/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "repositories/jest.config.ts"
      }
    }
  }
}
